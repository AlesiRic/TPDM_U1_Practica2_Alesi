<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity"
    android:columnCount="2"
    android:layout_row="2"
    android:padding="20dp">

    <RelativeLayout android:background="@drawable/rect"

        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="10dp"
        android:paddingRight="35dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sanguine"
            android:id="@+id/sanpic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sanpic"
            android:text="Sanguine"
            android:textSize="20dp"/>
    </RelativeLayout>

    <RelativeLayout android:background="@drawable/rect4"

        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="10dp"
        android:paddingRight="45dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/choleric"
            android:id="@+id/chopic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chopic"
            android:text="Choleric"
            android:textSize="20dp"/>
    </RelativeLayout>

    <RelativeLayout android:background="@drawable/rect2"

        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="10dp"
        android:paddingRight="17dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phlegmatic"
            android:id="@+id/melpic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/melpic"
            android:text="Phlegmatic"
            android:textSize="20dp"/>
    </RelativeLayout>

    <RelativeLayout android:background="@drawable/rect3"

        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/melancholic"
            android:id="@+id/phlpic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phlpic"
            android:text="Melancholic"
            android:textSize="20dp"/>
    </RelativeLayout>



</GridLayout>